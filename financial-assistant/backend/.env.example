# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/financial-assistant

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRY=24h

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./whatsapp-session
WHATSAPP_AUTO_RECONNECT=true
WHATSAPP_MAX_RETRIES=5

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL=debug

# NLP Configuration
NLP_LANGUAGE=id
NLP_CONFIDENCE_THRESHOLD=0.7

# Security
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=another-super-secret-key-change-this-in-production

# Cors Configuration
CORS_ORIGIN=http://localhost:8000

# File Upload
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# Default Admin Credentials (change these in production)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=changeme123

# Default User Settings
DEFAULT_USER_EXPIRY_DAYS=30
DEFAULT_MAX_PHONE_NUMBERS=1

# WhatsApp Bot Settings
BOT_NAME=Asisten Keuangan
BOT_WELCOME_MESSAGE=Selamat datang di Asisten Keuangan! Ketik 'bantuan' untuk melihat daftar perintah.
BOT_HELP_MESSAGE=Daftar perintah yang tersedia:\n- catat pengeluaran [jumlah] untuk [kategori]\n- catat pemasukan [jumlah] dari [kategori]\n- lihat transaksi\n- lihat budget\n- laporan [harian/bulanan/tahunan]

# Notification Settings
ENABLE_NOTIFICATIONS=true
NOTIFICATION_THRESHOLD=80  # percentage of budget usage

# System Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Sistem sedang dalam pemeliharaan. Silakan coba beberapa saat lagi.

# Error Reporting
ENABLE_ERROR_REPORTING=true
ERROR_NOTIFICATION_EMAIL=admin@example.com

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000  # milliseconds

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL=3600  # seconds

# API Rate Limiting (per endpoint)
API_RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds
API_RATE_LIMIT_MAX=60  # requests per window

# Session Management
SESSION_TIMEOUT=3600000  # 1 hour in milliseconds
MAX_SESSIONS_PER_USER=5

# Audit Logging
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=90

# Database Backup
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_INTERVAL=86400000  # 24 hours in milliseconds
MAX_BACKUP_FILES=10

# Feature Flags
ENABLE_VOICE_MESSAGES=true
ENABLE_IMAGE_OCR=true
ENABLE_AI_CATEGORIZATION=true
ENABLE_BUDGET_RECOMMENDATIONS=true

# AI/NLP Settings
AI_MODEL_ENDPOINT=http://localhost:5000
AI_MODEL_TIMEOUT=5000  # milliseconds
AI_CONFIDENCE_THRESHOLD=0.7

# External Services
CURRENCY_API_KEY=your-currency-api-key
OCR_API_KEY=your-ocr-api-key
ANALYTICS_API_KEY=your-analytics-api-key

# Timezone
DEFAULT_TIMEZONE=Asia/Jakarta

# Remember to change all sensitive values in production!
